# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           controllers.Assets.at(path = "/public", file ="index.html")

# Generate DB schema
#GET         /createSchema               controllers.DBSchemaCreator.createSchema

# Player management
POST        /api/register               controllers.PlayerManagementController.register
POST        /api/login                  controllers.PlayerManagementController.login
PUT         /api/passwdreset            controllers.PlayerManagementController.resetPassword
PUT         /api/passwdupdate           controllers.PlayerManagementController.updatePassword

# Game type
POST        /api/games/types/new        controllers.GameTypeController.newGameType

# Game
POST        /api/games/new              controllers.GameController.newGame

# Map static resources from the /public folder to the /assets URL path
GET         /*file                      controllers.Assets.at(path="/public", file)